{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2020",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "@gazer/db/migrations": ["libs/db/migrations/src/index.ts"],
      "@gazer/docker/plugin": ["libs/plugins/docker/src/index.ts"],
      "@gazer/server/config": ["libs/server/config/src/index.ts"],
      "@gazer/server/image": ["libs/server/image/src/index.ts"],
      "@gazer/server/kysely": ["libs/server/kysely/src/index.ts"],
      "@gazer/server/security": ["libs/server/security/src/index.ts"],
      "@gazer/server/valibot-pipe": ["libs/server/valibot-pipe/src/index.ts"],
      "@gazer/server/zod-pipe": ["libs/server/zod-pipe/src/index.ts"],
      "@gazer/shared/types": ["libs/shared/types/src/index.ts"],
      "@gazer/ui/footer": ["libs/ui/footer/src/index.ts"],
      "@gazer/ui/nav": ["libs/ui/nav/src/index.ts"],
      "@gazer/ui/router": ["libs/ui/router/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
